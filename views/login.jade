extends layout

block content	
	link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
	#gallery_body
		#gallery_content.admin
			div.col-md-4.col-md-offset-4(style='top:5%')
				.panel.panel-default
					.panel-heading
						h3.panel-title Login
					.panel-body
						form(action="/login", method="post")
							fieldset
								.form-group
									input.form-control(name="username", id="username", type="text", placeholder="Your username")
								.form-group
									input.form-control(name="password", id="password", type="password", placeholder="Your password")
								input.btn.btn-lg.btn-primary.btn-block(type="submit")
										